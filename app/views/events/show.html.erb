<div class="container">
  <div class="row">
    <div class="col">
    <div class="jumbotron">
        <h1 class="display-4">Event</h1> 
              <h2><%= @event.date %></h2>
              <p class="lead"><%= @event.description %></p>
              <hr class="my-4">
              <h6>Created by:</h6>
              <p><%= @event.creator.username %></p>
                <h3>List of Attendees</h3>
              <ul>
              <% if attendees_exists? %>
                <% @event.attendees.each do |attendee| %>
                  <li><%= attendee.username %></li>
                <% end %>
                <% else %>
                <li>There are no attendees for this event</li>
                <% end %>
              </ul>
              
              
        </div>
    </div>
  </div>
</div>




